<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_dark"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_img_cast"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/grey_9C_10"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/minus"
            android:scaleType="fitXY"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_real_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_img_cast"
        app:layout_constraintTop_toTopOf="@+id/cv_img_cast"/>

    <TextView
        android:id="@+id/tv_name_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/minus"
        android:textColor="@color/white_BBB"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_real_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_real_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>